@model Installments.Models.CollectionCenter

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Category<small>(New)</small></h3>
        </div>

        <div class="box-body">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-md-12">
                    <table style="width:50%">
                        <tr>
                            <td>


                                @Html.LabelFor(model => model.CenterTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.CenterTitle, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.CenterTitle, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>

                            <td>
                                @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.BranchID, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.DropDownListFor(model => model.BranchID, (SelectList)ViewBag.CategoryInfo, "- Select -", htmlAttributes: new { @class = "form-control Select2" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-primary pull-right" />
                                </div>
                            </td>
                            <td></td>
                        </tr>
                    </table>
                </div>

            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    .col-md-2 {
        max-width: 100%;
    }
</style>


